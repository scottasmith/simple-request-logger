<!doctype html>
<html lang="en">
<head>
    <title>Simple Request Logger</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
<div class="container">

    <h1><strong>Very</strong> simple request logger</h1>
    <h2>Show Request</h2>

    <table class="table">
        <tr>
            <td><strong>File</strong></td>
            <td>{{ details.filename }}</td>
        </tr>
        <tr>
            <td><strong>Creation date</strong></td>
            <td>{{ details.createdAt }}</td>
        </tr>
        <tr>
            <td><strong>Contents</strong></td>
            <td>
                {% for key, value in details.contents %}
                    <ul class="list-group list-group-horizontal">
                        <li class="list-group-item"><strong>{{ key }}</strong></li>
                        <li class="list-group-item">{{ value }}</li>
                    </ul>
                {% endfor %}
            </td>
        </tr>
        <tr>
            <td><strong>Sha Sign</strong></td>
            <td>{{ shaSign }}</td>
        </tr>
    </table>
</body>
</html>
