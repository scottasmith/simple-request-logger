<!doctype html>
<html lang="en">
<head>
    <title>Simple Request Logger</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
<div class="container">
    <h1><strong>Very</strong> simple request logger</h1>
    <h1>Requests</h1>

    <table class="table">
        <thead>
        <tr>
            <th>File</th>
            <th>Creation date</th>
        </tr>
        </thead>
        <tbody>
        {% for request in requests %}
            <tr>
                <td><a href="/protected/show-request/{{ request.filename }}">{{ request.filename }}</a></td>
                <td>{{ request.createdAt }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
</body>
</html>
